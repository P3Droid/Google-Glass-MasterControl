<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
	<TextView
	    android:id="@+id/textTitle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:text="@string/glass_status_title" />

		<TextView
		    android:id="@+id/textBattery"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/textBluetooth"
		    android:layout_below="@+id/textTitle"
   		    android:textSize="20sp"
		    android:layout_marginTop="4dp" />

		<TextView
		    android:id="@+id/textWifi"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/textBT"
		    android:layout_below="@+id/textBrightness"
   		    android:textSize="20sp"
		    android:layout_marginTop="1dp" />	
		    
		<TextView
		    android:id="@+id/textVolumeLevel"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/textBT"
		    android:layout_below="@+id/textBattery"
   		    android:textSize="20sp"
		    android:layout_marginTop="1dp" />
		
		<TextView
		    android:id="@+id/textBrightness"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/textBT"
		    android:layout_below="@+id/textVolumeLevel"
   		    android:textSize="20sp"
		    android:layout_marginTop="1dp" />	
		    
		<TextView
		    android:id="@+id/textSync"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/textBT"
		    android:layout_below="@+id/textBT"
   		    android:textSize="20sp"
		    android:layout_marginTop="1dp" />

		<TextView
		    android:id="@+id/textNetWorkName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/textWifi"
		    android:layout_toRightOf="@+id/textWifi"
		    android:textSize="20sp" />

		<TextView
		    android:id="@+id/textBT"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/textBattery"
		    android:layout_below="@+id/textWifi"
		    android:layout_marginTop="1dp"
		    android:textSize="20sp" />

</RelativeLayout>
